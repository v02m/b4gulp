include ../units/variables
include ../units/mixins
.main
    .container
            .row
                .col-lg-3.order-3.order-lg-1
                    +card1(imgAuthor, 'Card image cap', 'About me')

                    h3 Subscribe
                    .block.mb-2
                        form(method="post" action="/")
                            .form-group
                                input.form-control#exampleInputEmail1(type='email' aria-describedby='emailHelp' placeholder='Enter email')
                                small#emailHelp.form-text.text-muted We'll never share your email with anyone else.
                            button.btn.btn-success.btn-block(type='submit') Subscribe





                .col-lg-6.col-md-8.order-1.order-ld-2
                    +card2(imgPhoto1, 'Card image cap', 'Post title', 'Read more', smallText)
                    +card2(imgPhoto2, 'Card image cap', 'AutorGood', 'Read more', smallText2)
                    +card2(imgPhoto3, 'Card image cap', 'AutorGood', 'Read more', smallText3)

                    +pagiNation(pageLink)





                .col-lg-3.col-md-4.order-2.order-lg-3
                    .list-group.mt-4.mb-4
                        a.list-group-item.list-group-item-action.active(href='#') #{Section1}
                        a.list-group-item.list-group-item-action(href='#') #{Section2}
                        a.list-group-item.list-group-item-action(href='#') #{Section3}
                        a.list-group-item.list-group-item-action(href='#') #{Section4}
                        a.list-group-item.list-group-item-action(href='#') #{Section5}
                    
                    h3 Tags Cloud
                    .block.mb-4
                        a.badge.badge-info.mr-2(href="#") travel
                        a.badge.badge-info.mr-2(href="#") rest
                        a.badge.badge-info.mr-2(href="#") mountain
                        a.badge.badge-info.mr-2(href="#") world
                        a.badge.badge-info.mr-2(href="#") nature
                        a.badge.badge-info.mr-2(href="#") photos
                    

                    h3 Gallery
                    .block
                        .row.no-gutters
                            .col-6
                                img.img-fluid(src="../../images/gallery-1.jpg" alt="")
